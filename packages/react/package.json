{
  "name": "@litemetrics/react",
  "version": "0.1.2",
  "description": "React bindings for Litemetrics analytics (hooks + provider)",
  "license": "MIT",
  "author": "Metehan Kurucu",
  "repository": {
    "type": "git",
    "url": "https://github.com/metehankurucu/litemetrics",
    "directory": "packages/react"
  },
  "keywords": [
    "analytics",
    "litemetrics",
    "react",
    "hooks",
    "tracking"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@litemetrics/tracker": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@types/react": "^19",
    "react": "^19",
    "tsup": "^8",
    "typescript": "^5.7"
  }
}
